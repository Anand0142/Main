            </div>

            <Image
                class="Slide_From_Left absolute bottom-10 md:bottom-2 w-[300px] md:w-[400px]"
                src={ContactArt}
                alt="ContactArt"
                loading="lazy"
            />
        </div>

        <!-- Form Component -->
        <ContactForm client:load className="Slide_From_Right" />
    </div>
</section>

<script is:inline type="module">
    document.addEventListener("DOMContentLoaded", () => {
        const center = document.querySelector("#socialCircle");
        const icons = document.querySelectorAll(".socialIcon");

        if (!center || icons.length === 0) return;

        const radius = Math.ceil(center.clientWidth / 2);
        const iconSize = icons[0].clientWidth;

        icons.forEach((icon, index) => {
            const angle = (index / (icons.length - 1)) * Math.PI;
            const x = Math.cos(-angle) * radius - iconSize / 2;
            const y = Math.sin(-angle) * radius - iconSize / 2;

            icon.style.left = `${center.offsetWidth / 2 + x}px`;
            icon.style.top = `${center.offsetHeight / 2 + y}px`;
        });
    });
</script>
