<section
    id="contact"
    class="w-full min-h-screen mb-16 lg:mb-[15em] px-6 py-4 pt-14 bg-background"
>
    <CenterTitle title="Contact" color="primary" />

    <div class="w-full flex_center flex-col p-4 text-[1.2em] text-center">
        <h3 class="Slide_From_Left gradientText font-ubuntu text-[2rem] lg:text-[2.4rem]">
            Let's collaborate!
        </h3>
        <p class="Slide_From_Left">Questions? Ideas? Collaborations? I'm here for it.</p>
        <p class="Slide_From_Left">Let's connect and make something amazing happen ðŸ˜‰</p>
    </div>

    <div class="flex_center flex-col lg:flex-row w-full h-full gap-4 lg:gap-10 lg:px-20 pt-8 pb-16">
        <!-- Social Circle + Art -->
        <div class="relative w-full flex_center flex-col">
            <div
                class="Slide_From_Left w-full max-w-[350px] scale-[0.9] lg:scale-1 lg:max-w-[450px] aspect-square rounded-full border-2 border-dashed border-contactSocialColor mb-8 md:mb-0 md:mt-7"
                id="socialCircle"
            >
                <!-- LinkedIn -->
                <a
                    href="https://www.linkedin.com/in/girigalla-prathyusha/"
